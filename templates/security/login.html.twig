{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
            <style>
                .form-outline:focus{
                  outline-width: thin;
                }
                .gradient-custom-2 {
                    /* fallback for old browsers */
                    background: #fccb90;
                    
                    /* Chrome 10-25, Safari 5.1-6 */
                    background: #fccb90;
                    
                    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
                    background: #fff;
                    }
                    
                    @media (min-width: 768px) {
                    .gradient-form {
                    height: 100vh !important;
                    }
                    }
                    @media (min-width: 769px) {
                    .gradient-custom-2 {
                    border-top-right-radius: .3rem;
                    border-bottom-right-radius: .3rem;
                    }
                    }
            </style>
{% endblock %}

{% block body %}
<form method="post">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <section class="h-100 gradient-form" style="background-color: #F5F5F5">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100" >
            <div class="col-xl-10">
              <div class="card rounded-3 text-black" style="box-shadow: 15px 15px #DCDCDC; ">
                <div class="row g-0">
                  <div class="col-lg-6">
                    <div class="card-body p-md-5 mx-md-4">
      
                      <div class="text-center">
                        
                        <h1 class="mt-1 mb-5 pb-1">Bienvenue au Port Autonome de Douala</h1>
                      </div>
      
                      <form>
                        
                        <div class="form-outline mb-4">
                            <label for="inputEmail" class="form-label" style=" font-size:12px;">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="veillez entrer votre email d'utilisateur" required autofocus style="padding:17px; border-radius:5px;">
                          </div>
      
                        <div class="form-outline mb-4">
                            <label for="inputPassword" class="form-label" for="inputPassword" style=" font-size:12px;" >Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="veillez entrer votre mot de passe" style="padding:17px; border-radius:5px;" required>
                            
                        </div>
                        <div class="form-outline mb-4">
                            <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                            >
                        </div>

                        <div class="text-center pt-1 mb-5 pb-1">
                            <button  class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit" style=" background:blue; padding:10px; height: 55px; width:300px;">
                                Se connecter
                            </button><br>
                          <a class="text-muted" href="#!">Mot de passe oubli√© ?</a>
                        </div>
      
                      </form>
      
                    </div>
                  </div>
                  <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                    <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                        <div class="text-center">
                            <img src="{{ asset('images/logoPAD.png') }}"
                        style="width: 350px;" alt="logo">
                        </div>  
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}
