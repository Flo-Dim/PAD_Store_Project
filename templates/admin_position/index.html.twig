{% extends 'base.html.twig' %}

{% block title %}PAD | Add Position{% endblock %}

{% block body %}

<section class="h-100 gradient-form" style="background-color: #F5F5F5;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body p-md-5 mx-md-4" >
  
                  <div class="text-center">
                    
                    <h2 class="mt-1 mb-5 pb-1">Nouvelle Position</h2>
                  </div>
  
                  {{ form_start(PositionForm) }}
                      <div class="form-outline mb-4">
                        {{ form_row(PositionForm.title) }}
                      </div>

                      <div class="form-outline mb-4">
                        {{ form_row(PositionForm.users) }}
                      </div>
  
                      <div class="form-outline mb-4">
                        {{ form_row(PositionForm.budget) }}
                      </div>
                    <div class="text-center pt-1 mb-5 pb-1">
                      <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit" >Ajouter</button>
                      
                    </div>
                   
                    {{ form_end(PositionForm) }}
  
                </div>
              </div>
              <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                    <div class="text-center">
                        <img src="{{ asset('images/logoPAD.png') }}"
                    style="width:300px;" alt="logo">
                    </div> 
                  <h5>Port Autonome de Douala</h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

{% endblock %}
